<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.outplaysoftworks.sidedeckv2.MainActivity"
    android:orientation="vertical"
    android:padding="2dp"
    android:background="@color/material_dark">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:rowCount="2"
        android:columnCount="3"
        android:alignmentMode="alignMargins">
        <TextView
            android:layout_columnWeight="5"
            android:layout_rowWeight="1"
            android:padding="0dp"
            android:layout_margin="1dp"
            android:textColor="@color/material_white"
            android:textSize="30dp"
            android:gravity="center"
            android:typeface="monospace"
            android:maxLines="1"
            android:id="@+id/player1Lp" />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:padding="0dp"
            android:layout_margin="1dp"
            android:background="@color/material_light"
            android:clickable="true"
            android:enabled="true"
            android:text="@string/turn1"
            android:textColor="@color/material_white"
            android:textSize="16dp"
            android:gravity="center" />
        <TextView
            android:layout_columnWeight="5"
            android:layout_rowWeight="1"
            android:padding="0dp"
            android:layout_margin="1dp"
            android:textColor="@color/material_white"
            android:textSize="30dp"
            android:gravity="center"
            android:typeface="monospace"
            android:maxLines="1"
            android:id="@+id/player2Lp" />
        <EditText
            android:layout_columnWeight="5"
            android:layout_rowWeight="1"
            android:layout_margin="1dp"
            android:padding="0dp"
            android:clickable="true"
            android:enabled="true"
            android:textColor="@color/material_white"
            android:textSize="20dp"
            android:gravity="center"
            android:text="@string/playerOne"
            android:maxLines="1"
            android:id="@+id/player1Name" />

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:padding="0dp"
            android:layout_margin="1dp"
            android:clickable="true"
            android:enabled="true"
            android:textColor="@color/material_white"
            android:textSize="22dp"
            android:gravity="center"
            android:typeface="monospace"
            android:id="@+id/enteredValue"
            android:onClick="onClickEnteredValue" />

        <EditText
            android:layout_columnWeight="5"
            android:layout_rowWeight="1"
            android:padding="0dp"
            android:layout_margin="1dp"
            android:clickable="true"
            android:enabled="true"
            android:textColor="@color/material_white"
            android:textSize="20dp"
            android:gravity="center"
            android:text="@string/playerTwo"
            android:maxLines="1"
            android:id="@+id/player2Name" />
        <Button
            android:layout_columnWeight="10"
            android:layout_rowWeight="1"
            android:padding="0dp"
            android:layout_margin="1dp"
            android:background="@color/material_green_dark"
            android:clickable="true"
            android:enabled="true"
            android:text="+"
            android:textColor="@color/material_white"
            android:textSize="24dp"
            android:gravity="center"
            android:onClick="onClickP1Add" />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:padding="0dp"
            android:layout_margin="1dp"
            android:background="@color/material_light"
            android:clickable="true"
            android:enabled="true"
            android:text="@string/diceRoll"
            android:textColor="@color/material_white"
            android:textSize="16dp"
            android:gravity="center"
            android:onClick="onClickDiceRoll" />
        <Button
            android:layout_columnWeight="10"
            android:layout_rowWeight="1"
            android:padding="0dp"
            android:layout_margin="1dp"
            android:background="@color/material_green_dark"
            android:clickable="true"
            android:enabled="true"
            android:text="+"
            android:textColor="@color/material_white"
            android:textSize="24dp"
            android:gravity="center"
            android:onClick="onClickP2Add" />
        <Button
            android:layout_columnWeight="10"
            android:layout_rowWeight="1"
            android:padding="0dp"
            android:layout_margin="1dp"
            android:background="@color/material_red_dark"
            android:clickable="true"
            android:enabled="true"
            android:text="-"
            android:textColor="@color/material_white"
            android:textSize="24dp"
            android:gravity="center"
            android:onClick="onClickP1Sub" />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:padding="0dp"
            android:layout_margin="1dp"
            android:background="@color/material_light"
            android:clickable="true"
            android:enabled="true"
            android:text="@string/coinFlip"
            android:textColor="@color/material_white"
            android:textSize="16dp"
            android:gravity="center"
            android:onClick="onClickCoinFlip" />
        <Button
            android:layout_columnWeight="10"
            android:layout_rowWeight="1"
            android:padding="0dp"
            android:layout_margin="1dp"
            android:background="@color/material_red_dark"
            android:clickable="true"
            android:enabled="true"
            android:text="-"
            android:textColor="@color/material_white"
            android:textSize="24dp"
            android:gravity="center"
            android:onClick="onClickP2Sub" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:rowCount="2"
        android:columnCount="3">

        <Button android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/material_light_dark"
            android:layout_margin="1dp"
            android:clickable="true"
            android:enabled="true"
            android:text="7"
            android:textColor="@color/material_white"
            android:textSize="35dp"
            android:gravity="center"
            android:typeface="monospace"
            android:tag="7"
            android:onClick="onClickNumbers" />
        <Button android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/material_light_dark"
            android:layout_margin="1dp"
            android:clickable="true"
            android:enabled="true"
            android:text="8"
            android:textColor="@color/material_white"
            android:textSize="35dp"
            android:gravity="center"
            android:typeface="monospace"
            android:tag="8"
            android:onClick="onClickNumbers" />
        <Button android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/material_light_dark"
            android:layout_margin="1dp"
            android:clickable="true"
            android:enabled="true"
            android:text="9"
            android:textColor="@color/material_white"
            android:textSize="35dp"
            android:gravity="center"
            android:typeface="monospace"
            android:tag="9"
            android:onClick="onClickNumbers" />
        <Button android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/material_light_dark"
            android:layout_margin="1dp"
            android:clickable="true"
            android:enabled="true"
            android:text="4"
            android:textColor="@color/material_white"
            android:textSize="35dp"
            android:gravity="center"
            android:typeface="monospace"
            android:tag="4"
            android:onClick="onClickNumbers" />
        <Button android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/material_light_dark"
            android:layout_margin="1dp"
            android:clickable="true"
            android:enabled="true"
            android:text="5"
            android:textColor="@color/material_white"
            android:textSize="35dp"
            android:gravity="center"
            android:typeface="monospace"
            android:tag="5"
            android:onClick="onClickNumbers" />
        <Button android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/material_light_dark"
            android:layout_margin="1dp"
            android:clickable="true"
            android:enabled="true"
            android:text="6"
            android:textColor="@color/material_white"
            android:textSize="35dp"
            android:gravity="center"
            android:typeface="monospace"
            android:tag="6"
            android:onClick="onClickNumbers" />
        <Button android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/material_light_dark"
            android:layout_margin="1dp"
            android:clickable="true"
            android:enabled="true"
            android:text="1"
            android:textColor="@color/material_white"
            android:textSize="35dp"
            android:gravity="center"
            android:typeface="monospace"
            android:onClick="onClickNumbers"
            android:tag="1"/>
        <Button android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/material_light_dark"
            android:layout_margin="1dp"
            android:clickable="true"
            android:enabled="true"
            android:text="2"
            android:textColor="@color/material_white"
            android:textSize="35dp"
            android:gravity="center"
            android:typeface="monospace"
            android:tag="2"
            android:onClick="onClickNumbers" />
        <Button android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/material_light_dark"
            android:layout_margin="1dp"
            android:clickable="true"
            android:enabled="true"
            android:text="3"
            android:textColor="@color/material_white"
            android:textSize="35dp"
            android:gravity="center"
            android:typeface="monospace"
            android:tag="3"
            android:onClick="onClickNumbers" />
        <Button android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/material_light_dark"
            android:layout_margin="1dp"
            android:onClick="onClickNumbers"
            android:clickable="true"
            android:enabled="true"
            android:text="0"
            android:textColor="@color/material_white"
            android:textSize="35dp"
            android:gravity="center"
            android:typeface="monospace"
            android:tag="0"/>
        <Button android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/material_light_dark"
            android:layout_margin="1dp"
            android:clickable="true"
            android:enabled="true"
            android:text="00"
            android:textColor="@color/material_white"
            android:textSize="35dp"
            android:gravity="center"
            android:typeface="monospace"
            android:tag="00"
            android:onClick="onClickNumbers" />
        <Button android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/material_light_dark"
            android:layout_margin="1dp"
            android:clickable="true"
            android:enabled="true"
            android:text="000"
            android:textColor="@color/material_white"
            android:textSize="35dp"
            android:gravity="center"
            android:typeface="monospace"
            android:tag="000"
            android:onClick="onClickNumbers" />

    </GridLayout>

</LinearLayout>
