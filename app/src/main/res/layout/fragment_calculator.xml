<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dark"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.outplaysoftworks.sidedeck.MainActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dark"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player1Lp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:gravity="center"
            android:maxLines="1"
            android:padding="0dp"
            android:textColor="@color/material_white"
            android:textSize="30dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/buttonTurn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/turn1"
            android:textSize="16dp"
            style="@style/Button.Function" />

        <TextView
            android:id="@+id/player2Lp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:gravity="center"
            android:maxLines="1"
            android:padding="0dp"
            android:textColor="@color/material_white"
            android:textSize="30dp"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText

            android:id="@+id/player1Name"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="Player 1"
            android:lines="1"
            android:longClickable="false"
            android:maxLines="1"
            android:padding="0dp"
            android:singleLine="true"
            android:textColor="@color/material_white"
            android:textColorHint="@color/material_accent"
            android:textSize="20dp" />


        <TextView

            android:id="@+id/enteredValue"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="3"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="@color/material_white"
            android:textSize="22dp"
            android:typeface="monospace"
            android:maxLines="1" />


        <EditText

            android:id="@+id/player2Name"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="Player 2"
            android:lines="1"
            android:longClickable="false"
            android:maxLines="1"
            android:padding="0dp"
            android:singleLine="true"
            android:textColor="@color/material_white"
            android:textColorHint="@color/material_accent"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button

            android:id="@+id/buttonP1Add"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:background="@color/material_green_dark"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:padding="0dp"
            android:text="+"
            android:textColor="@color/material_white"
            android:textSize="24dp" />

        <Button

            android:id="@+id/buttonDiceRoll"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/diceRoll"
            android:textSize="16dp"
            style="@style/Button.Function" />

        <Button

            android:id="@+id/buttonP2Add"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:background="@color/material_green_dark"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:padding="0dp"
            android:text="+"
            android:textColor="@color/material_white"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonP1Sub"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:background="@color/material_red_dark"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:padding="0dp"
            android:text="-"
            android:textColor="@color/material_white"
            android:textSize="24dp" />/

        <Button
            android:id="@+id/buttonCoinFlip"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/coinFlip"
            android:textSize="16dp"
            style="@style/Button.Function" />

        <Button

            android:id="@+id/buttonP2Sub"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:background="@color/material_red_dark"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:padding="0dp"
            android:text="-"
            android:textColor="@color/material_white"
            android:textSize="24dp"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button7"
            style="@style/Button.Number"
            android:tag="7"
            android:text="7" />
        <Button
            android:id="@+id/button8"
            style="@style/Button.Number"
            android:tag="8"
            android:text="8" />
        <Button
            android:id="@+id/button9"
            style="@style/Button.Number"
            android:tag="9"
            android:text="9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button4"
            style="@style/Button.Number"
            android:tag="4"
            android:text="4" />
        <Button
            android:id="@+id/button5"
            style="@style/Button.Number"
            android:tag="5"
            android:text="5" />
        <Button
            android:id="@+id/button6"
            style="@style/Button.Number"
            android:tag="6"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button1"
            style="@style/Button.Number"
            android:tag="1"
            android:text="1" />
        <Button
            android:id="@+id/button2"
            style="@style/Button.Number"
            android:tag="2"
            android:text="2" />
        <Button
            android:id="@+id/button3"
            style="@style/Button.Number"
            android:tag="3"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button0"
            style="@style/Button.Number"
            android:tag="0"
            android:text="0" />
        <Button
            android:id="@+id/button00"
            style="@style/Button.Number"
            android:tag="00"
            android:text="00" />
        <Button
            android:id="@+id/button000"
            style="@style/Button.Number"
            android:tag="000"
            android:text="000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".66"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Timer"
            android:id="@+id/buttonTimer"
            android:layout_weight="1"
            style="@style/Button.Function" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Reset"
            android:id="@+id/buttonReset"
            android:layout_weight="1"
            style="@style/Button.Function" />

        <Button
            style="@style/Button.Function"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/buttonClear"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Undo"
            android:id="@+id/buttonUndo"
            android:layout_weight="1"
            style="@style/Button.Function" />
    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/trans"
        android:visibility="gone"
        android:id="@+id/holderTimer">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/trans"
            android:id="@+id/spacerTimerTop" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/trans"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/material_light"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:visibility="gone">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:background="@color/trans"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textIsSelectable="false"
                    android:textSize="28sp"
                    android:typeface="monospace"
                    android:background="@color/trans"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:clickable="true"
                    android:id="@+id/buttonTimerClose"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:id="@+id/timerHolder"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/material_light"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:layout_gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.jesusm.holocircleseekbar.lib.HoloCircleSeekBar
                            android:layout_centerInParent="true"
                            android:id="@+id/picker"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            app:max="3600"
                            app:pointer_color="@color/accent"
                            app:pointer_halo_color="@color/material_dark"
                            app:pointer_size="10dp"
                            app:text_color="@color/material_white"
                            app:text_size="65sp"
                            app:show_text="false"
                            app:init_position="2400"
                            app:wheel_active_color="@color/accent"
                            app:wheel_unactive_color="@color/material_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="TIME"
                            android:id="@+id/textTime"
                            android:textSize="48sp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Reset"
                        android:id="@+id/buttonResetTimer"
                        android:layout_weight="1"
                        style="@style/Button.Number"
                        android:typeface="normal"
                        android:textSize="26sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:id="@+id/buttonStartTimer"
                        android:layout_weight="1"
                        style="@style/Button.Number"
                        android:typeface="normal"
                        android:textSize="26sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/trans"
            android:layout_margin="0dp"
            android:id="@+id/spacerTimerBottom" />
    </LinearLayout>

    /
</RelativeLayout>
