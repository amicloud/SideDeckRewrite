<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dark"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context="com.outplaysoftworks.sidedeckv2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player1Lp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:gravity="center"
            android:maxLines="1"
            android:padding="0dp"
            android:textColor="@color/material_white"
            android:textSize="30dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/buttonTurn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/turn1"
            android:textSize="16dp"
            style="@style/Button.Function" />

        <TextView
            android:id="@+id/player2Lp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:gravity="center"
            android:maxLines="1"
            android:padding="0dp"
            android:textColor="@color/material_white"
            android:textSize="30dp"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText

            android:id="@+id/player1Name"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="Player 1"
            android:lines="1"
            android:longClickable="false"
            android:maxLines="1"
            android:padding="0dp"
            android:singleLine="true"
            android:textColor="@color/material_white"
            android:textColorHint="@color/material_accent"
            android:textSize="20dp" />


        <TextView

            android:id="@+id/enteredValue"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="3"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="@color/material_white"
            android:textSize="22dp"
            android:typeface="monospace" />


        <EditText

            android:id="@+id/player2Name"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="Player 2"
            android:lines="1"
            android:longClickable="false"
            android:maxLines="1"
            android:padding="0dp"
            android:singleLine="true"
            android:textColor="@color/material_white"
            android:textColorHint="@color/material_accent"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button

            android:id="@+id/buttonP1Add"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:background="@color/material_green_dark"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:padding="0dp"
            android:text="+"
            android:textColor="@color/material_white"
            android:textSize="24dp" />

        <Button

            android:id="@+id/buttonDiceRoll"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/diceRoll"
            android:textSize="16dp"
            style="@style/Button.Function" />

        <Button

            android:id="@+id/buttonP2Add"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:background="@color/material_green_dark"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:padding="0dp"
            android:text="+"
            android:textColor="@color/material_white"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonP1Sub"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:background="@color/material_red_dark"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:padding="0dp"
            android:text="-"
            android:textColor="@color/material_white"
            android:textSize="24dp" />/

        <Button
            android:id="@+id/buttonCoinFlip"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/coinFlip"
            android:textSize="16dp"
            style="@style/Button.Function" />

        <Button

            android:id="@+id/buttonP2Sub"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="5"
            android:background="@color/material_red_dark"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:padding="0dp"
            android:text="-"
            android:textColor="@color/material_white"
            android:textSize="24dp"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button7"
            style="@style/Button.Number"
            android:tag="7"
            android:text="7" />
        <Button
            android:id="@+id/button8"
            style="@style/Button.Number"
            android:tag="8"
            android:text="8" />
        <Button
            android:id="@+id/button9"
            style="@style/Button.Number"
            android:tag="9"
            android:text="9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button4"
            style="@style/Button.Number"
            android:tag="4"
            android:text="4" />
        <Button
            android:id="@+id/button5"
            style="@style/Button.Number"
            android:tag="5"
            android:text="5" />
        <Button
            android:id="@+id/button6"
            style="@style/Button.Number"
            android:tag="6"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button1"
            style="@style/Button.Number"
            android:tag="1"
            android:text="1" />
        <Button
            android:id="@+id/button2"
            style="@style/Button.Number"
            android:tag="2"
            android:text="2" />
        <Button
            android:id="@+id/button3"
            style="@style/Button.Number"
            android:tag="3"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button0"
            style="@style/Button.Number"
            android:tag="0"
            android:text="0" />
        <Button
            android:id="@+id/button00"
            style="@style/Button.Number"
            android:tag="00"
            android:text="00" />
        <Button
            android:id="@+id/button000"
            style="@style/Button.Number"
            android:tag="000"
            android:text="000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".66"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Timer"
            android:id="@+id/button"
            android:layout_weight="1"
            style="@style/Button.Function" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Reset"
            android:id="@+id/button10"
            android:layout_weight="1"
            style="@style/Button.Function" />

        <Button
            style="@style/Button.Function"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/button12"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Undo"
            android:id="@+id/button11"
            android:layout_weight="1"
            style="@style/Button.Function" />
    </LinearLayout>

</LinearLayout>
