<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_light</item>
        <item name="colorPrimaryDark">@color/material_light_dark</item>
        <item name="colorAccent">@color/material_accent</item>
        <item name="android:textColor">@color/material_white</item>
        <item name="android:textColorPrimary">@color/material_white</item>
        <item name="android:textColorSecondary">@color/material_lightGray</item>
        <item name="android:textColorTertiary">@color/material_lightGray</item>
        <item name="android:editTextColor">@color/material_lightGray</item>
        <item name="android:colorForeground">@color/material_lightGray</item>
        <item name="android:windowBackground">@color/material_dark</item>

    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.TransparentCursorBackground">
        <item name="android:windowBackground">@color/trans</item>
        <item name="android:background">@color/trans</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LightTheme" parent="AppTheme" >
        <item name="colorPrimary">@color/material_white</item>
        <item name="colorPrimaryDark">@color/material_white</item>
        <item name="colorAccent">@color/material_accent</item>
        <item name="android:colorBackground">@color/material_white</item>
        <item name="android:textColorPrimary">@color/material_white</item>
        <item name="android:colorForeground">@color/material_white</item>
    </style>
    <style name="Button">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/material_white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Button.Number">
        <item name="android:background">@drawable/button_pressed_number</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Button.Function">
        <item name="android:background">@drawable/button_pressed_function</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="MyDialog" parent="AlertDialog.AppCompat">
        <item name="android:background">@color/material_dark</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textColorPrimary">@color/material_white</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
