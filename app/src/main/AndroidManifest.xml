<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.outplaysoftworks.sidedeck">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:configChanges="orientation"
        android:screenOrientation="portrait">
        <activity
            android:name="com.outplaysoftworks.sidedeck.Splash"
            android:windowSoftInputMode="adjustNothing"
            android:configChanges="orientation"
            android:theme="@style/AppTheme.Splash"
            android:screenOrientation="portrait">>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.outplaysoftworks.sidedeck.MainActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustNothing"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.outplaysoftworks.sidedeck.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName="com.outplaysoftworks.sidedeck.MainActivity"
            android:configChanges="orientation"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.outplaysoftworks.sidedeck.MainActivity" />
        </activity>
    </application>

</manifest>